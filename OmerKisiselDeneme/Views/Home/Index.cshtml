@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Ömer Yılmaz | Yazılım Geliştirici</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #f8f9fa;
    }
    .profile {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .profile img {
      width: 200px;
      height: 200px;
      object-fit: cover;
      border-radius: 50%;
      border: 4px solid #343a40;
      margin-bottom: 20px;
    }
    .profile h1 {
      font-size: 2rem;
      font-weight: bold;
    }
    .profile p {
      font-size: 1.2rem;
      color: #6c757d;
    }
  </style>
</head>
<body>

<div class="profile">
  <img src="https://via.placeholder.com/200" alt="Profil Fotoğrafı">
  <h1>Ömer Yılmaz</h1>
  <p>Yazılım Geliştirici | Web • Mobil • Masaüstü</p>
</div>

</body>
</html>
